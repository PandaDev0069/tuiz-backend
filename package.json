{
  "name": "tuiz-backend",
  "version": "1.0.0",
  "description": "TUIZ backend API server",
  "main": "dist/server.js",
  "lint-staged": {
    "*.{ts,tsx,js,json,md,mdx}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js}": [
      "eslint --max-warnings=0"
    ]
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "npm run build && node dist/server.js",
    "deploy": "npm run start",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "prepare": "husky",
    "test": "echo 'Tests disabled in CI - skipping'",
    "test:ui": "vitest --ui",
    "test:ci": "echo 'CI tests disabled - skipping'",
    "test:critical": "echo 'Critical tests disabled in CI - skipping'",
    "test:high": "echo 'High priority tests disabled in CI - skipping'",
    "test:unit": "echo 'Unit tests disabled in CI - skipping'",
    "test:integration": "echo 'Integration tests disabled in CI - skipping'",
    "test:auth": "echo 'Auth tests disabled in CI - skipping'",
    "test:quiz": "echo 'Quiz tests disabled in CI - skipping'",
    "test:answers": "echo 'Answer tests disabled in CI - skipping'",
    "test:questions": "echo 'Question tests disabled in CI - skipping'",
    "test:quick": "echo 'Quick tests disabled in CI - skipping'",
    "test:smoke": "echo 'Smoke tests disabled in CI - skipping'",
    "test:all": "echo 'All tests disabled in CI - skipping'"
  },
  "engines": {
    "node": ">=22"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.55.0",
    "@types/multer": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "multer": "^2.0.2",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "socket.io": "^4.8.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "supabase": "^2.76.11",
    "supertest": "^7.1.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  }
}
