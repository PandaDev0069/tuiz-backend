{
  "name": "tuiz-backend",
  "version": "1.0.0",
  "description": "TUIZ backend API server",
  "main": "dist/server.js",
  "lint-staged": {
    "*.{ts,tsx,js,json,md,mdx}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js}": [
      "eslint --max-warnings=0"
    ]
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "npm run build && node dist/server.js",
    "deploy": "npm run start",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "prepare": "husky",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:ci": "ts-node scripts/ci-test-runner.ts",
    "test:critical": "vitest --run tests/health.test.ts tests/unit/validation.test.ts tests/unit/utils.test.ts tests/unit/auth-optimized.test.ts",
    "test:high": "vitest --run tests/health.test.ts tests/unit/validation.test.ts tests/unit/utils.test.ts tests/unit/auth-optimized.test.ts tests/auth.test.ts tests/integration/auth-flow.test.ts tests/quiz.test.ts tests/integration/quiz-optimized.test.ts",
    "test:unit": "vitest --run tests/unit/",
    "test:integration": "vitest --run tests/integration/",
    "test:auth": "vitest --run tests/auth.test.ts tests/integration/auth-flow.test.ts tests/unit/auth-optimized.test.ts",
    "test:quiz": "vitest --run tests/quiz.test.ts tests/integration/quiz-optimized.test.ts tests/integration/quiz-management.test.ts",
    "test:answers": "vitest --run tests/integration/answers.test.ts",
    "test:questions": "vitest --run tests/integration/questions.test.ts",
    "test:quick": "vitest --run tests/health.test.ts tests/unit/validation.test.ts tests/unit/utils.test.ts tests/not-found.test.ts",
    "test:smoke": "vitest --run tests/health.test.ts tests/unit/validation.test.ts tests/unit/utils.test.ts",
    "test:all": "vitest --run"
  },
  "engines": {
    "node": ">=22"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.55.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "socket.io": "^4.8.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  }
}
